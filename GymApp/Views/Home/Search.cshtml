@model SearchViewModel

<div class="container margin">
    @if (Model.Gyms.Any())
    {    <h3>Searched for: @Model.Search</h3>
    <hr />
    <div class="card-columns">
        @foreach (var gym in Model.Gyms)
        {
            <div class="card text-white bg-dark mb-3" style="max-width: 18rem;">
                <img class="card-img-top" src="~/images/gym.png" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@gym.Name</h5>
                    <span>There are @gym.NumberOfOpinions opinions.</span>

                    <p class="card-text">@gym.Description</p>
                    <a href="/gym/details/@gym.Id" class="btn btn-primary">Check opinions</a>
                </div>
            </div>   
        }

    </div>
    }
    else
    {
        <h3>We could not find any gym :( Try with different phrase.</h3>
    }
</div>